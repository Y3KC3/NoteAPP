<div class="row">
    {{#each notes}}
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title d-flex justify-content-between align-items-center"> 
                        {{title}} <a href="/notes/edit/{{id}}"><i class="fas fa-edit"></i></a>
                    </h4>
                    <p>
                        {{description}}
                        <form action="/notes/delete/{{id}}?_method=DELETE" method="POST">
                            <input type="hidden" name="_method" value="DELETE"> 
                            <button class="btn btn-danger btn-block btn-sm my-2" type="submit">Borrar</button>                           
                        </form>
                    </p>
                </div>
            </div>
        </div>
        {{else}}
            <div class="card mx-auto">
                <div class="card-body">
                    <h1>Hola {{ user.name }}</h1>
                    <p class="lead">
                        No Hay Notas Aun
                    </p>
                    <a href="/notes/add" class="btn btn-success btn-block">Crear Una</a>
                </div>
            </div>
    {{/each}}
</div>